# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  id: ID!
  userId: ID!
  content: String!
  isDone: Boolean!
  user: User!
}

# TeamHubのユーザ情報
type User {
  id: Int!
  email: String!
  name: String!
  profileImageUrl: String!
}

type Query {
  todos: [Todo!]!
}

input NewTodo {
  text: String!
  userId: String!
}

type Mutation {
  createTodo(input: NewTodo!): Todo!
}
